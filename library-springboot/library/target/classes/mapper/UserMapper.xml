<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiu.library.mapper.UserMapper">

    <insert id="save">
        insert into user(name,username,age,sex,phone,address)
        values(#{name},#{username},#{age},#{sex},#{phone},#{address})
    </insert>

    <update id="updateById">
        update user set name = #{name},age = #{age},sex = #{sex},phone = #{phone},address = #{address},
        account = #{account},updatetime = #{updatetime},status = #{status}
        where id = #{id}
    </update>

    <update id="deleteById">
        update user set isdeleted = 1
        where id = #{id}
    </update>

    <update id="updateScoreByNo">
        update user set account = account + #{score} where username = #{userNo}
    </update>

    <update id="changeStatus">
        update user set status = !status
        where id = #{id}
    </update>

    <select id="selectAllUsers" resultType="com.qiu.library.entity.User">
        select * from user where isdeleted = 0
    </select>

    <select id="listByCondition" resultType="com.qiu.library.entity.User">
        select * from user
        <where>
            <if test="isdeleted != null">
                isdeleted = 0
            </if>
            <if test="name != null and name != ''">
               and name like concat('%',#{name},'%')
            </if>
            <if test="phone != null and phone != ''">
                and phone like concat('%',#{phone},'%')
            </if>
        </where>
        order by id desc
    </select>

    <select id="getById" resultType="com.qiu.library.entity.User">
        select * from user where id = #{id}
    </select>

    <select id="getByNo" resultType="com.qiu.library.entity.User">
        select * from user where username = #{userNo}
    </select>

</mapper>